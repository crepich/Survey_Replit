// Alias for easy lookup by language key (used by applyTranslation)
const translationsByLang = languages;
// Updates visible text nodes only; preserves IDs, values, and logic
function applyTranslation(langKey) {
  console.debug('applyTranslation called for', langKey);
  const t = translationsByLang[langKey];
  if (!t) return;
  // set document language and direction if provided (useful for RTL languages like Arabic)
  document.documentElement.lang = t.langCode || 'en';
  document.documentElement.dir = t.dir || 'ltr';

  // header/subtitle
  if (headingElement && t.heading) headingElement.textContent = t.heading;
  if (subtitleElement && t.subtitle) subtitleElement.textContent = t.subtitle;

  // search placeholder
  const searchBox = document.getElementById('language-search');
  if (searchBox && t.searchPlaceholder) searchBox.setAttribute('placeholder', t.searchPlaceholder);

  // continue button
  const cont = document.getElementById('continue-btn');
  if (cont && t.continueText) cont.textContent = t.continueText;

  // basic info
  const basicH = document.querySelector('#basic-info-section h1'); if (basicH && t.basicInfoHeading) basicH.textContent = t.basicInfoHeading;
  const roleH3 = document.querySelector('#basic-info-section .form-group h3'); if (roleH3 && t.roleHeading) roleH3.textContent = t.roleHeading;
  const roleP = document.querySelector('#basic-info-section .form-group p'); if (roleP && t.rolePrompt) roleP.textContent = t.rolePrompt;

  // role options
  const roleSel = document.getElementById('role-select');
  if (roleSel && Array.isArray(t.roleOptions)) {
    const opts = roleSel.querySelectorAll('option');
    for (let i = 0; i < Math.min(opts.length, t.roleOptions.length); i++) {
      opts[i].textContent = t.roleOptions[i];
    }
  }

  // domains placeholders
  if (Array.isArray(t.domainPlaceholders)) {
    t.domainPlaceholders.forEach((ph, i) => {
      const inp = document.getElementById('domain_' + (i + 1) + '_input');
      if (inp) inp.setAttribute('placeholder', ph);
    });
  }

  // assessment
  const aH = document.querySelector('#password-form h1'); if (aH && t.assessmentHeading) aH.textContent = t.assessmentHeading;
  const aP = document.querySelector('#password-form .sub'); if (aP && t.assessmentSub) aP.textContent = t.assessmentSub;

  // progress
  const pLeft = document.querySelector('.progress-caption #progress-count'); if (pLeft && t.progressCaptionLeft) pLeft.textContent = t.progressCaptionLeft;
  const pRight = document.querySelector('.progress-caption span:last-child'); if (pRight && t.progressCaptionRight) pRight.textContent = t.progressCaptionRight;

  // questions (update if rendered)
  if (typeof questionsContainer !== 'undefined' && questionsContainer) {
    console.debug('applyTranslation will update rendered questions (container present)');
    const qSections = questionsContainer.querySelectorAll('.q');
    if (Array.isArray(t.questions)) {
      t.questions.forEach((q, idx) => {
        const sec = qSections[idx];
        if (!sec) return;
        const h = sec.querySelector('h3');
        const p = sec.querySelector('p');
        if (h && q.title) h.textContent = q.title;
        if (p && q.prompt) p.textContent = q.prompt;
        const btns = sec.querySelectorAll('.option-btn');
        if (btns && Array.isArray(q.options)) {
          for (let j = 0; j < Math.min(btns.length, q.options.length); j++) {
            btns[j].textContent = q.options[j];
            btns[j].setAttribute('data-label', q.options[j]);
          }
        }
      });
    }
  }
  // Defensive getter for language option nodes (re-query DOM when needed)
  function getLanguageOptions() { return document.querySelectorAll('.lang-option'); }
  // Helper: compute the current language list order and find the index of a language
  function findLanguageIndex(lang) {
    const list = Array.from(getLanguageOptions()).map(o => o.getAttribute('data-lang'));
    return list.indexOf(lang);
  }

  // Search functionality (simple, inline) - defensive: re-query element and attach only if present
  (function(){
    const _searchEl = document.getElementById('language-search');
    if (!_searchEl) return;
    _searchEl.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      const opts = getLanguageOptions();
      if (!opts || opts.length === 0) { console.debug('No language option nodes found during search'); return; }
      opts.forEach(option => {
        const langNameEl = option.querySelector('.lang-name');
        const langNativeEl = option.querySelector('.lang-native');
        const langName = langNameEl ? langNameEl.textContent.toLowerCase() : '';
        const langNative = langNativeEl ? langNativeEl.textContent.toLowerCase() : '';
        if (langName.includes(searchTerm) || langNative.includes(searchTerm)) { option.style.display = 'block'; } else { option.style.display = 'none'; }
      });
    });
  })();

  // Language selection handlers: click + keyboard support. When chosen, map to translations by index and stop auto-cycler.
  (function attachLanguageHandlers(){
    const opts = getLanguageOptions();
    if (!opts || opts.length === 0) { console.debug('No language options found to attach handlers'); return; }
    opts.forEach(option => {
      option.setAttribute('tabindex', '0');
      function choose() {
        const freshOpts = getLanguageOptions();
        freshOpts.forEach(opt => opt.classList.remove('selected'));
        option.classList.add('selected');
        const selectedLang = option.getAttribute('data-lang');
        // defensive re-query in case nodes were re-created
        const btn = document.getElementById('continue-btn');
        const langFld = document.getElementById('SB_Languages');
        if (langFld) langFld.value = selectedLang;
        console.log('Language selected:', selectedLang);
        if (btn) { btn.disabled = false; }
        // Attempt to map to translations by index (best-effort; the translations array order should match the visible language list)
          const idx = findLanguageIndex(selectedLang);
          if (idx !== -1 && translations[idx]) {
            headingElement.textContent = translations[idx].heading;
            subtitleElement.textContent = translations[idx].subtitle;
          }
        // Apply explicit per-language mapping if available (does not change logic)
        if (translationsByLang[selectedLang]) {
          applyTranslation(selectedLang);
        }
        // Stop the auto-cycling once the user explicitly picks a language
        if (translationInterval) { clearInterval(translationInterval); translationInterval = null; }
      }
      option.addEventListener('click', choose);
      option.addEventListener('keydown', (ev) => {
        if (ev.key === 'Enter' || ev.key === ' ') { ev.preventDefault(); choose(); }
        // allow keyboard users to continue immediately with Enter after selection
        if (ev.key === 'Enter' && document.getElementById('continue-btn') && !document.getElementById('continue-btn').disabled) {
          document.getElementById('continue-btn').click();
        }
      });
    });
  })();

  // Named continue handler (idempotent and defensive)
  function continueToSurvey(e) {
    // re-query key elements defensively in case of DOM mutations
    const langField = document.getElementById('SB_Languages');
    if (!langField || !langField.value) {
      // keep UX: prompt user to select a language
      alert('Please select a language before continuing.');
      return;
    }
    // Hide language section
    const langSection = document.getElementById('language-section'); if (langSection) langSection.classList.add('hidden');
    // Show basic info section and the form
    const basicInfo = document.getElementById('basic-info-section'); if (basicInfo) basicInfo.classList.remove('hidden');
    const pwForm = document.getElementById('password-form'); if (pwForm) pwForm.classList.remove('hidden');
    // Render personality questions
    if (typeof renderQuestions === 'function') renderQuestions();
    if (typeof updateProgress === 'function') updateProgress();
    // keep a small console trace for diagnostics (safe in production)
    try { console.log('Continuing with language:', langField.value); } catch (err) {}
  }

  // Attach continue handler once (guard against duplicate attachments)
  (function attachContinue() {
    const btn = document.getElementById('continue-btn');
    if (!btn) return;
    // remove any existing identical listener by using a flag on the element
    if (!btn._continueHandlerAttached) {
      btn.addEventListener('click', continueToSurvey);
      btn._continueHandlerAttached = true;
    }
  })();

  const QUESTIONS = [
    { scene: 'Morning Priorities', prompt: 'You wake up and see a social media post about a limited-time offer on a product you\'ve been interested in. How do you react?', options: [ { label: 'Research the product a little more in-depth', emotion: 'Curiosity' }, { label: 'Buy the product before the offer ends', emotion: 'Urgency' } ] },
    { scene: 'A Bold Proposal', prompt: 'Your manager asks if you\'d like to present an ambitious new idea at an upcoming meeting with executives. How do you respond?', options: [ { label: 'Eagerly agree; a chance to demonstrate your skills', emotion: 'Opportunity' }, { label: 'Decline for now; wait until the idea is fully developed', emotion: 'Fear' } ] },
    { scene: 'An Ethical Dilemma', prompt: 'You find a 20-dollar bill in your company\'s breakroom. How do you proceed?', options: [ { label: 'Keep the money', emotion: 'Greed' }, { label: 'Bring it to someone with authority to find the owner', emotion: 'Obedience' } ] },
    { scene: 'Learning Curve', prompt: 'You\'re offered a new app that could make work easier, but it requires time to learn and there\'s a tight deadline. What do you do?', options: [ { label: 'Explore features to see if it can add immediate value', emotion: 'Curiosity' }, { label: 'Stick with familiar tools to meet the deadline', emotion: 'Urgency' } ] },
    { scene: 'Big Opportunities', prompt: 'A colleague suggests a potentially lucrative partnership but with some risk involved. Your response?', options: [ { label: 'Express interest and arrange a follow-up meeting', emotion: 'Opportunity' }, { label: 'Accept the card but don\'t plan to follow up due to risk', emotion: 'Fear' } ] },
    { scene: 'Following Rules', prompt: 'You can tweak a project to highlight your work, but it deviates from instructions. What do you do?', options: [ { label: 'Make the tweaks—it could lead to promotion', emotion: 'Greed' }, { label: 'Follow the instructions as provided', emotion: 'Obedience' } ] },
    { scene: 'The Clock is Ticking', prompt: 'Your team project is falling behind schedule. How do you handle it?', options: [ { label: 'Take charge and speed things up to meet the deadline', emotion: 'Urgency' }, { label: 'Collaborate so everyone contributes (even if a deadline is missed)', emotion: 'Social' } ] },
    { scene: 'Handling Mistakes', prompt: 'Your supervisor offers you a new responsibility that you\'ve never handled before. How do you react?', options: [ { label: 'Ask colleagues for advice if they\'ve handled similar tasks', emotion: 'Social' }, { label: 'Politely decline; it\'s outside your comfort zone', emotion: 'Fear' } ] },
    { scene: 'Following Protocol', prompt: 'Your team suggests an unconventional solution that falls into a grey area with policy. Which path do you support?', options: [ { label: 'Support the team\'s approach, valuing collaboration', emotion: 'Social' }, { label: 'Stick to guidelines; ensure alignment with policy', emotion: 'Obedience' } ] },
    { scene: 'Final Opportunity', prompt: 'Your manager invites your team to dinner to discuss project progress. If you accept, what is your reasoning?', options: [ { label: 'Learn more about the project', emotion: 'Curiosity' }, { label: 'Free food and gifts', emotion: 'Greed' }, { label: 'Network and showcase work', emotion: 'Opportunity' } ] }
  ];

  const form = document.getElementById('password-form');
  const questionsContainer = document.getElementById('questions');
  const progressBar = document.getElementById('progress-bar');
  const progressCount = document.getElementById('progress-count');
  const submitBtn = document.getElementById('submit-btn');
  const roleSelect = document.getElementById('role-select');
  const domainInputs = [ document.getElementById('domain_1_input'), document.getElementById('domain_2_input'), document.getElementById('domain_3_input'), document.getElementById('domain_4_input'), document.getElementById('domain_5_input') ];
  const fields = [ document.getElementById('SR_0'), document.getElementById('SR_1'), document.getElementById('SR_2'), document.getElementById('SR_3'), document.getElementById('SR_4'), document.getElementById('SR_5'), document.getElementById('SR_6'), document.getElementById('SR_7'), document.getElementById('SR_8'), document.getElementById('SR_9') ];

  roleSelect.addEventListener('change', updateProgress);
  const domainError = document.getElementById('domain-error');

  function isValidDomain(domain) { if (!domain || domain.trim() === '') return true; let cleaned = domain.toLowerCase().trim() .replace(/^https?:\/\//, '') .replace(/^www\./, '') .replace(/\/$/, ''); const domainPattern = /^[a-z0-9]([a-z0-9-]*[a-z0-9])?(\.[a-z0-9]([a-z0-9-]*[a-z0-9])?)*\.[a-z]{2,}$/i; return domainPattern.test(cleaned); }
  function normalizeDomain(domain) { if (!domain || domain.trim() === '') return ''; return domain.toLowerCase().trim() .replace(/^https?:\/\//, '') .replace(/^www\./, '') .replace(/\/$/, ''); }
  function validateAllDomains() { let hasError = false; let errorMessages = []; domainInputs.forEach((field, index) => { const value = (field && field.value) ? field.value.trim() : ''; if (value && !isValidDomain(value)) { hasError = true; errorMessages.push('Domain ' + (index + 1) + ' is not valid'); if (field) field.style.borderColor = 'var(--accent)'; } else { if (field) field.style.borderColor = 'rgba(255,255,255,.18)'; if (value && field) { field.value = normalizeDomain(value); } } }); if (hasError) { domainError.textContent = errorMessages.join(', '); domainError.style.display = 'block'; } else { domainError.style.display = 'none'; } return !hasError; }
  domainInputs.forEach(field => { if (field) { field.addEventListener('blur', validateAllDomains); field.addEventListener('input', () => { field.style.borderColor = 'rgba(255,255,255,.18)'; if (domainError.style.display === 'block') { setTimeout(validateAllDomains, 300); } }); } });

  form.addEventListener('click', function(ev){ const isOption = ev.target && ev.target.closest('.option-btn'); if (isOption) { ev.preventDefault(); } }, true);

  
  // Enhanced: use translations for questions if available (does not change hidden field IDs/values)
  function renderQuestions(){
    questionsContainer.innerHTML = '';
    const _langField = getLanguageField();
    const selectedLangKey = (_langField && _langField.value) ? _langField.value : 'English';
    console.debug('renderQuestions start - selectedLangKey:', selectedLangKey, 'QUESTIONS.length:', QUESTIONS.length, 'questionsContainer?', !!questionsContainer);
     const langT = translationsByLang[selectedLangKey] || translationsByLang['English'];
    QUESTIONS.forEach((q, idx) => {
      const wrap = document.createElement('section');
      wrap.className = 'q';
      wrap.setAttribute('aria-labelledby', `q${idx+1}-title`);
      const h = document.createElement('h3');
      h.id = `q${idx+1}-title`;
      // fallback to original scene or translated title if provided
      h.textContent = (Array.isArray(langT.questions) && langT.questions[idx] && langT.questions[idx].title) ? langT.questions[idx].title : q.scene;
      wrap.appendChild(h);
      const p = document.createElement('p');
      p.textContent = (Array.isArray(langT.questions) && langT.questions[idx] && langT.questions[idx].prompt) ? langT.questions[idx].prompt : q.prompt;
      wrap.appendChild(p);
      const row = document.createElement('div');
      row.className = 'btnrow';
      q.options.forEach((opt, optIdx) => {
        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'option-btn';
        btn.setAttribute('role','button');
        btn.setAttribute('aria-pressed','false');
        btn.setAttribute('data-field', String(idx));
        btn.setAttribute('data-emotion', opt.emotion);
        // preserve data-label for reporting but show translated label if available
        const translatedLabel = (Array.isArray(langT.questions) && langT.questions[idx] && Array.isArray(langT.questions[idx].options) && langT.questions[idx].options[optIdx]) ? langT.questions[idx].options[optIdx] : opt.label;
        btn.setAttribute('data-label', opt.label);
        btn.textContent = translatedLabel;
        btn.addEventListener('click', (e) => { e.preventDefault(); e.stopPropagation(); selectOption(idx, btn); });
        btn.addEventListener('keydown', (ev) => { if (ev.key === 'Enter' || ev.key === ' ') { ev.preventDefault(); selectOption(idx, btn); } });
        row.appendChild(btn);
      });
      wrap.appendChild(row);
      questionsContainer.appendChild(wrap);
    });
    updateProgress();
  }
  function selectOption(questionIndex, btn){ const group = questionsContainer.querySelectorAll(`.option-btn[data-field="${questionIndex}"]`); group.forEach(b => b.setAttribute('aria-pressed','false')); btn.setAttribute('aria-pressed','true'); const emotion = btn.getAttribute('data-emotion'); if (fields[questionIndex]) { fields[questionIndex].value = emotion; fields[questionIndex].setAttribute('value', emotion); } updateProgress(); }
  function answeredCount(){ return fields.filter(f => f && f.value && f.value.trim() !== '').length; }
  function isRoleSelected(){ return roleSelect && roleSelect.value && roleSelect.value.trim() !== ''; }
  function updateProgress(){
    const answeredQuestions = answeredCount();
    const roleSelected = isRoleSelected();
    const total = fields.length;
    if (progressBar) progressBar.style.width = ((answeredQuestions/total)*100) + '%';
    // localize progress captions using selected language mapping if available
    const _langField = getLanguageField();
    const selectedLangKey = (_langField && _langField.value) ? _langField.value : 'English';
    const langT = translationsByLang[selectedLangKey] || translationsByLang['English'];
    const left = (langT && langT.progressCaptionLeft) ? langT.progressCaptionLeft : (answeredQuestions + '/' + total + ' answered');
    const right = (langT && langT.progressCaptionRight) ? langT.progressCaptionRight : 'Warm red indicates progress';
    if (progressCount) progressCount.textContent = (typeof left === 'string' && left.includes('/')) ? left : (answeredQuestions + '/' + total + ' ' + left);
    const rightSpan = document.querySelector('.progress-caption span:last-child'); if (rightSpan) rightSpan.textContent = right;
    if (submitBtn) submitBtn.disabled = !roleSelected || answeredQuestions !== total;
  }
  form.addEventListener('submit', (e) => {
    // Debug: Check what's in the timer field when submitting
    const timerField = document.getElementById('ST_Seconds');
    console.log('On submit, ST_Seconds field value is:', timerField ? timerField.value : '(missing)');
    const _langField = getLanguageField();
    console.log('On submit, SB_Languages field value is:', _langField ? _langField.value : '(missing)');
    if (!isRoleSelected()) { e.preventDefault(); alert('Please select your role before submitting.'); roleSelect.focus(); return; }
    if (!validateAllDomains()) { e.preventDefault(); alert('Please fix the domain format errors before submitting.'); return; }
    if (answeredCount() !== fields.length){ e.preventDefault(); alert('Please answer all questions before submitting.'); return; }
    domainInputs.forEach(field => { if (field && field.value.trim()) { field.value = normalizeDomain(field.value); } });
    fields.forEach(f => { if (f) f.setAttribute('value', f.value); });
    if (submitBtn) { submitBtn.disabled = true; submitBtn.textContent = 'Submitted'; }
  });

